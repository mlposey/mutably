{
  "swagger": "2.0",
  "info": {
    "description": "The Mutably REST API",
    "version": "1.0.0",
    "title": "Mutably",
    "contact": {
      "email": "marcusposey@gmail.com"
    }
  },
  "host": "localhost",
  "basePath": "/v1",
  "tags": [
    {
      "name": "languages",
      "description": "Languages implemented by the API"
    },
    {
      "name": "words",
      "description": "Words from all supported languages"
    },
    {
      "name": "users",
      "description": "User data"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/languages": {
      "get": {
        "tags": [
          "languages"
        ],
        "summary": "Retrieves all supported languages",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Language"
              }
            }
          },
          "400": {
            "description": "no languages exist",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/languages/{id}": {
      "get": {
        "tags": [
          "languages"
        ],
        "summary": "Retrieves a specific language",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the language",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/Language"
            }
          },
          "404": {
            "description": "language not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/words": {
      "get": {
        "tags": [
          "words"
        ],
        "summary": "Retrieves all words",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Word"
              }
            }
          },
          "400": {
            "description": "no words exist",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/words{id}": {
      "get": {
        "tags": [
          "words"
        ],
        "summary": "Retrieves a specific word",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the word",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/Word"
            }
          },
          "404": {
            "description": "word not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/words/{id}/inflections": {
      "get": {
        "tags": [
          "words"
        ],
        "summary": "Retrieves an inflection table associated with the word",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the word",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/InflectionTable"
            }
          },
          "404": {
            "description": "word has no inflections",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retrieves all users",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "404": {
            "description": "no users exist",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates a new user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "description": "A definition of a new user. Only the handle property is used here. Others are generated in back-end code.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "405": {
            "description": "invalid user definition",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retrieves a specific user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "user not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "handle"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "handle": {
          "type": "string"
        },
        "lang-from": {
          "type": "integer",
          "format": "int64"
        },
        "lang-to": {
          "type": "integer",
          "format": "int64"
        },
        "creation-tz": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Language": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "description": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "Word": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "text": {
          "type": "string"
        },
        "language": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "InflectionTable": {
      "description": "All inflections of an infinitive verb",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "infinitive": {
          "type": "string"
        },
        "present": {
          "$ref": "#/definitions/InflectionTense"
        },
        "past": {
          "$ref": "#/definitions/InflectionTense"
        }
      }
    },
    "InflectionTense": {
      "description": "The inflections of an infinitive verb in a single tense",
      "type": "object",
      "properties": {
        "first-person": {
          "type": "string"
        },
        "second-person": {
          "type": "string"
        },
        "third-person": {
          "type": "string"
        },
        "plural": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "description": "A detailed error message",
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    }
  }
}